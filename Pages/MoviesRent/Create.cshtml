@page "{id:int?}"
@model RazorPagesMovie.Pages.MoviesRent.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MyMovieRent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MyMovieRent.MyClientID" class="control-label"></label>
                <select asp-for="MyMovieRent.MyClientID" class="form-control" asp-items="ViewBag.MyClientList"></select>
            </div>
            <div class="form-group">
                <label asp-for="MyMovieRent.MyMovieID" class="control-label"></label>
                <input asp-for="MyMovieRent.MyMovieID" class="form-control" />
                <span asp-validation-for="MyMovieRent.MyMovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyMovieRent.RentDate" class="control-label"></label>
                <input asp-for="MyMovieRent.RentDate" class="form-control" />
                <span asp-validation-for="MyMovieRent.RentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
